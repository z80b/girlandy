.lp-form
    absolute top 16rem right 0 width 43rem height 43rem
    display block
    box-sizing border-box
    padding 3rem
    background-color #fff
    border-radius 5px
    text-align center
    
    &__title
        font-size 2.8rem
        font-weight 800
        line-height 1.2
        margin 0 0 3rem
    
    &__input, &__submit
        display block
        width 100%
        font-size 1.4rem
        font-weight 400
        line-height 5rem
        text-align center
        
    &__input
        color #BABBBC
        border solid 1px #8D8D8D
        border-radius 4px
        box-shadow inset 0 2px 4px 1px rgba(#000, .25)
        margin 0 0 1.6rem
        
    &__submit
        font-weight 800
        background radial-gradient(33.00px at 50% -9%, #FFFFFF 0%, rgba(#fff, 0) 100%), #FDB53C
        color #000
        border 1px solid rgba(#000, 0.1)
        border-radius 5px