.lp-top-info
    @extends $clear-block
    absolute top 0 right 0
    font-size 1.6rem
    line-height 1.5
    color #fff
    text-align right
    padding .5rem 0
    
    @media (max-width: 1024px)
        top 1rem
        right 3rem
        
    @media (max-width: 720px)
        right 0
        width 100%
        box-sizing border-box
        padding 0 1.5rem
        
    &__title
        font-weight 400
        
    &__text
        font-weight 700
    
    &__block
        float left
        padding 0 2rem 0 0
        
        &--first
            @media (max-width: 1024px)
                absolute bottom -1.5rem left 0 width 15.5rem
                padding 0
                
            @media (max-width: 720px)
                bottom 5rem
                left auto
                right 1.5rem
                
        @media (max-width: 720px)
            float none
            padding 0
                
    &__title, &__text
        ~/__block--first &
            @media (max-width: 1024px)
                display inline-block
                font-size 1.2rem
                color #8D8D8D
                
    &__button
        display block
        box-sizing border-box
        float left
        color #FDB53C
        font-size 1.4rem
        line-height 2.8
        padding 0 1.5rem
        background none
        border solid 1px #FDB53C
        border-radius 5px
        cursor pointer
        transition .5s all ease
        
        &:hover
            background-color #FDB53C
            color #000
    
        @media (max-width: 720px)
            width 100%
            margin 3rem 0 0