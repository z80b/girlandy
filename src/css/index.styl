@import 'defaults.styl'

html, body
    font 10px/1 'Roboto', sans-serif
    size 100% 100%
    padding 0
    margin 0
    
body
    background url('/imgs/bg.jpeg') 50% 50%
    background-size cover
    
@import 'blocks/*.styl'
    
.lp-page
    position relative
    width 1165px
    margin auto
    padding 0 0 10rem
    box-sizing border-box
    
    @media (max-width: 1024px)
        width 100%
        min-height 700px
        padding 0
        
    @media (max-width: 720px)
        min-height auto
        min-width 320px
    
    &__wrapper
        size 100% 100%
        background url('/imgs/map.png') 15% 50% no-repeat
        box-sizing border-box
        
        @media (max-width: 1024px)
            padding 0 4.5rem
            
        @media (max-width: 720px)
            padding 0
    
    &__logo
        display block
        size 120px 93px
        background url('/imgs/logo.png') 0 0 no-repeat
        background-size contain

        @media (max-width: 1024px)
            size 145px 112px
            margin 0 0 0 3rem

        @media (max-width: 720px)
            size 90px 70px
                    
    &__body
        padding 6rem 0 0
        
        @media (max-width: 1024px)
            padding 5rem 0 0
            
        @media (max-width: 720px)
            padding 9rem .5rem 3rem
            background url('/imgs/boxes-mobile.png') 100% 100% no-repeat
            background-size auto 322px
        
    &__form
        absolute top 16rem right 0 width 43rem height 43rem
        
        @media (max-width: 1024px)
            absolute top 28rem right 2rem width 30rem height auto
            
            &::after
                content ''
                absolute bottom 100% height 217px width 195px right 25px
                margin 0 0 -17px
                background url('/imgs/muzik2.png') 100% 100% no-repeat
                background-size contain
                
            &::before
                content ''
                absolute top 135px left -85px height 380px width 200px
                background url('/imgs/boxes.png') 100% 100% no-repeat
                background-size contain
                
        @media (max-width: 720px)
            relative top auto right auto left auto width 100%
            margin 0
            
            &::after, &::before
                display none

        
    &__title
        position relative
        font 800 5rem/1.2 'Gotham Pro', sans-serif
        margin 0
        color #fff

        b
            color #FDB53C
            
        &::before
            content ''
            absolute width 3px height 20rem top 0 left -3rem
            box-sizing border-box
            border-top solid 5rem #FDB53C
            background-color #778D9F6B
            
            @media (max-width: 1024px)
                left 0
                
            @media (max-width: 720px)
                display none
        
        @media (max-width: 1024px)
            font-size 4rem
            padding 0 0 0 3rem
            
        @media (max-width: 720px)
            font-size 2.4rem
            
    &__subject
        font-size 2.8rem
        font-weight 500
        margin 0
        padding 3rem 0 6rem
        color #fff
        
        @media (max-width: 1024px)
            font-size 2rem
            padding 2rem 0 4rem 3rem
        
    &__muzik
        @media (min-width: 1024px)
            absolute bottom 0 left 50% width 327px height 708px
            margin 0 0 0 -14rem
            background url('/imgs/muzik.png') 0 0 no-repeat
            background-size contain
            z-index 2
        
    &__footer
        absolute bottom 0 right 0 width 40rem
        text-align left
        font-size 1.2rem
        font-weight 500
        line-height 2
        color #444C52
        
        @media (max-width: 1024px)
            right auto
            left 3rem
            bottom 1rem
            line-height 1.2
            
        @media (max-width: 720px)
            relative top auto right auto left auto bottom auto
            width 100%
            text-align center
            background-color #fff
            padding 1rem 0