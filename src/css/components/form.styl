$form
    display block
    box-sizing border-box
    padding 0
    background-color #fff
    border-radius 5px
    text-align center
    
    @media (max-width: 720px)
        border-radius 0
        
    &__close
        display block
        absolute top 0 left 100% width 2.2rem height 2.2rem
        margin 0 0 0 1rem
        padding 0
        border none
        outline none
        background url('imgs/cross.svg') 50% 50% no-repeat
        background-size cover
        cursor pointer
        
        @media (max-width: 720px)
            top 100%
            left 50%
            margin 1rem 0 0 -1.1rem
    
    &__title
        font-size 2.8rem
        font-weight 800
        line-height 1.2
        margin 0 0 3rem
        
        @media (max-width: 1024px)
            font-size 2rem
    
    &__input, &__submit
        display block
        width 100%
        font-size 1.4rem
        font-weight 400
        line-height 5rem
        text-align center
        
        @media (max-width: 1024px)
            line-height 4rem
        
    &__input
        color #000
        outline none
        border solid 1px #8D8D8D
        border-radius 4px
        box-shadow inset 0 2px 4px 1px rgba(#000, .25)
        margin 0 0 1.6rem
        transition .5s all ease
        
        &::placeholder
            color #BABBBC
        
        &:focus
            box-shadow inset 0 2px 4px 1px rgba(#000, .1)
            
    &__submit
        font-weight 800
        background radial-gradient(33.00px at 50% -9%, #FFFFFF 0%, rgba(#fff, 0) 100%), #FDB53C
        color #000
        border 1px solid rgba(#000, 0.1)
        border-radius 5px
        cursor pointer
        transition .5s all ease
        
        &:hover
            background radial-gradient(42.50px at 50% -9%, #FFFFFF 0%, rgba(255, 255, 255, 0) 100%), #FFBB48
                
    &__inner
        padding 3rem
        
        @media (max-width: 1024px)
            padding 2rem
            
    @media (max-width: 1024px)
        width 30rem
    